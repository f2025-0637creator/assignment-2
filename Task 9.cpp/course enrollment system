#include <iostream>
#include <vector>
using namespace std;

// Student structure
struct Student {
    string name;
    int id;
};

// Course structure
struct Course {
    string courseName;
    string courseCode;
    vector<Student> students;
};

int main() {
    int courses;
    cout << "Enter number of courses: ";
    cin >> courses;

    vector<Course> courseList;

    for (int i = 0; i < courses; i++) {
        Course c;
        int stuCount;

        cout << "\nCourse Name: ";
        cin >> c.courseName;

        cout << "Course Code: ";
        cin >> c.courseCode;

        cout << "Number of students: ";
        cin >> stuCount;

        for (int j = 0; j < stuCount; j++) {
            Student s;
            cout << "Student Name: ";
            cin >> s.name;

            cout << "Student ID: ";
            cin >> s.id;

            c.students.push_back(s);
        }

        courseList.push_back(c);
    }

    // Display data
    cout << "\n--- Course Details ---\n";
    for (int i = 0; i < courseList.size(); i++) {
        cout << "\nCourse: " << courseList[i].courseName
             << " (" << courseList[i].courseCode << ")\n";

        for (int j = 0; j < courseList[i].students.size(); j++) {
            cout << "Student: " << courseList[i].students[j].name
                 << ", ID: " << courseList[i].students[j].id << endl;
        }
    }

    return 0;
}